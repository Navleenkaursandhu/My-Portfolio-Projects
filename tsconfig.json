{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2021",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
  },
  "include": ["src/react"],
}
